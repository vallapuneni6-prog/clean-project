# ============================================================================
# ENVIRONMENT CONFIGURATION - Salon Management System
# ============================================================================
# Copy this file to .env and fill in your production values
# IMPORTANT: .env should NOT be committed to version control!
# ============================================================================

# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost                    # MySQL server host
DB_PORT=3306                         # MySQL server port
DB_NAME=ansira_db                    # Database name
DB_USER=salon_user                   # Database user (create with limited privileges)
DB_PASSWORD=your_secure_password     # Strong password (min 16 chars, mix of uppercase, lowercase, numbers, special chars)
DB_CHARSET=utf8mb4                   # Character set (support for full Unicode)

# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET=your_32_character_random_secret_key_min_32_chars_long_here
                                     # Generate with: openssl rand -base64 32
                                     # Or: php -r 'echo bin2hex(random_bytes(32));'
JWT_ALGORITHM=HS256                  # Algorithm (HS256 = HMAC SHA256)
JWT_EXPIRY=3600                      # Token expiry in seconds (3600 = 1 hour)

# APPLICATION CONFIGURATION
# ============================================================================
API_URL=https://yourdomain.com/api   # Full API URL (use HTTPS in production)
FRONTEND_URL=https://yourdomain.com  # Frontend URL (use HTTPS in production)
APP_ENV=production                   # Environment: development, staging, production

# DEBUG & LOGGING
# ============================================================================
DEBUG=false                          # Never true in production!
DISPLAY_ERRORS=false                 # Never true in production!
ERROR_LOG=/var/log/php-error.log     # Path to error log file
LOG_LEVEL=error                      # Log level: error, warning, info, debug

# SERVER & SECURITY
# ============================================================================
SERVER_TIMEZONE=UTC                  # Timezone (UTC recommended)
SECURE_COOKIES=true                  # Use secure cookies (HTTPS)
SAME_SITE_COOKIES=Lax                # SameSite cookie policy
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
                                     # Comma-separated list of allowed origins

# FILE UPLOAD
# ============================================================================
MAX_UPLOAD_SIZE=10485760             # Max upload in bytes (10 MB)
UPLOAD_DIR=/tmp/salon_uploads        # Temporary upload directory
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf  # Allowed file types

# EMAIL (Optional - for future features)
# ============================================================================
MAIL_HOST=smtp.gmail.com             # Email server
MAIL_PORT=587                        # Email port
MAIL_USERNAME=your-email@gmail.com   # Email account
MAIL_PASSWORD=your-app-password      # App password (not regular password)
MAIL_FROM=noreply@yourdomain.com     # From email address
MAIL_FROM_NAME=Salon Management      # From name

# CACHE (Optional)
# ============================================================================
CACHE_DRIVER=file                    # Cache driver: file, redis, memcached
CACHE_TTL=3600                       # Cache time-to-live in seconds

# MONITORING & ALERTS
# ============================================================================
MONITOR_ENABLED=true                 # Enable monitoring
ALERT_EMAIL=admin@yourdomain.com     # Email for alerts
ERROR_THRESHOLD=5                    # Alert if N errors in 5 minutes

# ============================================================================
# SECURITY NOTES
# ============================================================================
# 1. Never commit this file to version control
# 2. Ensure .env is in .gitignore
# 3. Use strong, unique passwords
# 4. Rotate JWT_SECRET periodically
# 5. Use HTTPS in production (never HTTP)
# 6. Ensure /var/log is writable by PHP user
# 7. Keep database backups secure and remote
# 8. Monitor error logs regularly
# 9. Use database user with minimal privileges
# 10. Keep dependencies updated

# ============================================================================
# GENERATING SECURE VALUES
# ============================================================================

# Generate JWT_SECRET:
#   PHP: php -r 'echo bin2hex(random_bytes(32));'
#   OpenSSL: openssl rand -base64 32
#   Python: python3 -c 'import secrets; print(secrets.token_urlsafe(32))'

# Generate DB_PASSWORD:
#   OpenSSL: openssl rand -base64 16
#   Python: python3 -c 'import secrets; print(secrets.token_urlsafe(16))'

# Test MySQL Connection:
#   mysql -h DB_HOST -u DB_USER -p -e "SELECT 1;"

# ============================================================================
# PRODUCTION CHECKLIST
# ============================================================================
# [ ] DB_HOST and DB_NAME configured correctly
# [ ] DB_USER created with limited privileges
# [ ] DB_PASSWORD is strong (16+ chars)
# [ ] JWT_SECRET is 32+ random characters
# [ ] DEBUG = false
# [ ] DISPLAY_ERRORS = false
# [ ] API_URL uses HTTPS
# [ ] FRONTEND_URL uses HTTPS
# [ ] .env is in .gitignore
# [ ] .env is NOT in version control
# [ ] Error log path is writable
# [ ] Backups are configured
# [ ] Monitoring is enabled

# ============================================================================
